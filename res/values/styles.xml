<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:icon" android:right="20dp">@drawable/city72x72</item>
        <item name="android:label" android:left="20dp">@string/app_name</item>
    </style>
    
	<style name="SpinnerDropDownItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/retangulo</item>
    </style>
    
     <style name="SpinnerItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/retangulo</item>
    </style>    

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@color/blue_default</item>
    </style>

    <style name="ButtonBarButton" />
	
	<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="spinBars">true</item>
	</style>
	
    <style name="Widget.AppCompat.Light.ActionBar" parent="Base.Widget.AppCompat.Light.ActionBar">
    </style>
    
	<style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
	    <item name="android:background">@drawable/background</item>
	    <item name="background">@drawable/background</item>
	    
	    <item name="titleTextStyle">@style/MyActionBarText</item>
	    <item name="android:titleTextStyle">@style/MyActionBarText</item>
	    
	    <item name="android:fontFamily" tools:ignore="NewApi">fonts/Cookie-Regular.ttf</item>
	    
	    
	</style>
	
	<style name="MyActionBarText">
	    <item name="android:textColor">@color/white_overlay</item>
	    <item name="android:textSize">24sp</item>
	    <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="android:textColorSecondary">#66000000</item>
	</style>
	
	<style name="AppTheme2" parent="Theme.AppCompat.Light">
		<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
		
 		<item name="android:actionBarStyle">@style/MyActionBar</item>
	    <item name="actionBarStyle">@style/MyActionBar</item>
	    
	    <item name="android:textColor">@color/white_overlay</item>
		<item name="android:spinnerItemStyle">@style/SpinnerItem</item>
		<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>	    
	    
	</style>	
	

</resources>
